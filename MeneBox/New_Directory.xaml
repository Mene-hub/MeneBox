<Window x:Class="MeneBox.New_Directory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MeneBox"
        mc:Ignorable="d"
        Title="Nuova Cartella" Height="200" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="120" Margin="0,0,0,25">
            <Label HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FFFD8023">Nome Cartella</Label>
            <TextBox x:Name="TB_Name" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,10,10" HorizontalAlignment="Center">
            <Button Name="BT_Ok" Background="#FFFF6D00" BorderBrush="#FFFF6D00" Foreground="#DDFFFFFF" Width="100" Click="BT_Ok_Click">OK</Button>
            <Button Name="BT_Annulla" Background="#FFFF6D00" BorderBrush="#FFFF6D00" Foreground="#DDFFFFFF" Width="100" Click="BT_Ok_Click">ANNULLA</Button>
        </StackPanel>
    </Grid>
</Window>
